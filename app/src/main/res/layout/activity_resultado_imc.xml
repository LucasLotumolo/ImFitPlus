<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ResultadoIMCActivity">

    <TextView
        android:id="@+id/nome_resultado_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/imc_resultado_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/nome_resultado_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/categoria_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/imc_resultado_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/calcular_gasto_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Gasto CalÃ³rico"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/categoria_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/voltar_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/calcular_gasto_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
