<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumoSaudeActivity">

    <include android:id="@+id/toolbar_in"
        layout="@layout/toolbar_resumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nome_resumo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="24sp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_in"/>

    <TextView
        android:id="@+id/imc_resumo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/nome_resumo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/categoria_resumo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/imc_resumo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/peso_ideal_resumo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso Ideal"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoria_resumo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/gasto_calorico_resumo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gasto Calórico"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/peso_ideal_resumo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recomendacao_agua_resumo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendação de Água"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/gasto_calorico_resumo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/voltar_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/recomendacao_agua_resumo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>